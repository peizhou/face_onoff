.save-button {
    background-color: #fd4274;
}

.save-button,.share-button {
    align-items: center;
    border-radius: 40rpx;
    display: flex;
    height: 80rpx;
    justify-content: center;
    width: 300rpx;
}
.water{
    position: absolute;
    top: 200rpx;
    left: 0;
    z-index: 999;
    color: #ffffff;
    animation:waterani 15s infinite linear;
    text-shadow: 5rpx 5rpx 5rpx #000000;
    opacity: 0.8;
}
@keyframes waterani {
    20% {
      transform: translateX(300rpx) scale(1.3) translateY(100rpx);
      opacity: 1;
    }
    40% {
        transform: translateX(0rpx) translateY(450rpx);
        opacity: 0;
    }
    80% {
      transform: translateX(150rpx) scale(1.3) translateY(650rpx);
      opacity: 1;
    }
    100% {
      transform: translateX(0rpx) scale(1) translateY(100rpx);
      opacity: 0;
    }
  }
  
.share-button {
    background-color: #a51da5;
    margin-left: 30rpx;
}

.gradient-btn {
    background: linear-gradient(90deg,#ff009c,#f3b653);
}

.solid-large-share-btn {
    background-color: #a51da5;
    border-radius: 40rpx;
    height: 80rpx;
    width: 500rpx;
}

.hint-dialog-select-pay,.solid-large-share-btn {
    align-items: center;
    display: flex;
}

.hint-dialog-select-pay {
    background-color: #fff;
    border-radius: 20rpx;
    flex-direction: column;
    height: fit-content;
    left: 50%;
    margin-left: -325rpx;
    margin-top: -350rpx;
    position: fixed;
    top: 50%;
    width: 650rpx;
}